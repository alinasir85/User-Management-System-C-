
@{
    ViewBag.Title = "AdminHome";
    List<Assignment5.Models.UserDTO> u =(List<Assignment5.Models.UserDTO>) Session["userGrid"];
}
@model List <Assignment5.Models.UserDTO>

<h2>AdminHome</h2>
<form action="~/Admin/logout" method="post">
    <input type="submit" value="Logout" />
</form><br />
<table border="1" width="200">
    <thead>
        <tr>
            <td>
                <b> UserID </b>
            </td>
            <td>
                <b>  Name </b>
            </td>
            <td>
                <b>  Login </b>
            </td>
            <td>
                <b>  Address </b>
            </td>
            <td>
                <b>   Age </b>
            </td>
            <td>
                <b>  Edit </b>
            </td>
        </tr>
    </thead>
    <tbody>
      
            @foreach (var obj in u)
            {
                <tr>
                    <td>
                        @obj.UserID
                    </td>
                    <td>
                        @obj.name
                    </td>
                    <td>
                        @obj.login
                    </td>
                    <td>
                        @obj.address
                    </td>
                    <td>
                        @obj.age
                    </td>
                    <td>
                        <form action="~/Admin/edit" method="post">
                            <input type="submit" value="edit" />
                            <input type="hidden" value="@obj.login" name="uid" />
                        </form>
                    </td>
                </tr>
            }
                
    </tbody>

</table>

